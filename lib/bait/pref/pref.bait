package pref

import os

struct Preferences {
	path     string
	is_test  bool
	out_name string
}

fun bait_exe_path() string {
	bexe := os.getenv('BAITEXE')
	if bexe.len > 0 {
		return bexe
	}
	exe_path := os.real_path(os.executable())
	os.setenv('BAITEXE', exe_path, true)
	return exe_path
}
